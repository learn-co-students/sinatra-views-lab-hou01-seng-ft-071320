<% weekday = Date.today.strftime('%A') %>
<% month_date = Date.today.strftime('%B %d') %>
<% year = Date.today.strftime('%Y') %>

<% @today = "The date is #{weekday}, #{month_date}, #{year}" %>

<!DOCTYPE html>
<html>
    <head>
        <title>Info Page</title>
    </head>
    <body>
        <h1>Today</h1>
        <p><%="#{@today}"%></p>
    </body>
</html>